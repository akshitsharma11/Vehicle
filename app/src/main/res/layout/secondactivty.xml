<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8D0353F4"
    >

    <de.hdodenhof.circleimageview.CircleImageView

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/vehicle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:civ_border_width="6dp"
        app:civ_border_color="@color/colorAccent"/>

   <TextView

       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Enter Vehicle Number :"
       android:layout_centerInParent="true"
       android:textAlignment="center"

       android:textSize="15dp"
       android:layout_margin="10dp"
       android:id="@+id/txtview"
       android:textColor="#BF000000"
       />

<EditText
    android:hint="RJ14CY0868"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtview"
    android:padding="5dp"
    android:id="@+id/edtvehicleno"
    android:layout_marginLeft="50dp"
    android:layout_centerInParent="true"
    android:background="@drawable/rcsearch"



    />

    <ImageButton
        android:onClick="checkPermission"
        android:padding="5dp"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/edtvehicleno"
        android:layout_margin="1.5dp"
        android:src="@drawable/ic_search_black_24dp"
        android:layout_below="@id/txtview"
        android:background="@android:color/transparent"
        android:id="@+id/searchbutton"
        />



</RelativeLayout>